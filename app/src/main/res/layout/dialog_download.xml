<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#00000000"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="22dp"
              android:paddingRight="22dp">

    <TextView
        android:id="@+id/dialog_download_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_midetail_apply"
        android:gravity="center"
        android:paddingBottom="21dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:paddingTop="21dp"
        android:text="dfadfsafafd"
        android:textColor="#747b84"
        android:textSize="17dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:background="#fff"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_download_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dfadfsafafd"
            android:textColor="#747b84"
            android:textSize="17dp"
            android:visibility="visible"/>

        <ProgressBar
            android:id="@+id/dialog_download_progress"
            android:layout_width="match_parent"
            style="@style/mProgress_horizontal"
            android:layout_height="match_parent"/>
        <!--style="@style/Widget.AppCompat.ProgressBar.Horizontal"-->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efefef"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_download_cancle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_dialog_confirm_left"
            android:gravity="center"
            android:text="取消"
            android:textColor="#fff"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/dialog_download_confirm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_dialog_confirm_right_white"
            android:gravity="center"
            android:text="更新"
            android:textColor="#f00"
            android:textSize="17dp"/>
    </LinearLayout>
</LinearLayout>