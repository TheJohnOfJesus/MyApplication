            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_round_blue"
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/tv_main_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_listview"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_main_download"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_round_blue"
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/tv_main_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_download"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_main_ndk"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_round_blue"
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/tv_main_ndk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_ndk"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_main_coutdown"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_round_blue"
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/tv_main_countdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_countdown"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_main_beizer"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_round_blue"
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/tv_main_beizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_water"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_main_tbs_video"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_round_blue"
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/tv_main_tbs_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_water"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
